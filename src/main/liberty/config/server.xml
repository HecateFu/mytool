<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <featureManager>
        <!-- tag::servlet[] -->
        <feature>servlet-4.0</feature>
        <!-- end::servlet[] -->
        <!-- tag::springboot[] -->
        <feature>springBoot-2.0</feature>
        <!-- end::springboot[] -->
    </featureManager>

    <!-- tag::httpport[] -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443" />
    <!-- end::httpport[] -->

    <!-- tag::springBootApplication[] -->
    <springBootApplication id="mytool"
                           location="thin-mytool-1.0-SNAPSHOT.jar"
                           name="mytool" />
    <!-- end::springBootApplication[] -->

</server>